<section class="c-site-login o-row-container o-row-container--center">
    <div class="c-site-login__box">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="c-site-login__box__authorize-type o-row-container">
            <div>
                <a class="" asp-area="Identity" asp-page="/Account/Login">Вход</a>
            </div>
            <div class="">
                <a class="u-active" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
            </div>
        </div>
        <form class="c-site-login__box__form o-column-container" method="post">
            <fieldset class="o-input-form">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName">
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </fieldset>
            <fieldset class="o-input-form">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </fieldset>
            <fieldset class="o-input-form">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber">
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </fieldset>
            <fieldset class="o-input-form">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </fieldset>
            <fieldset class="o-input-form">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </fieldset>
            <button type="submit" class="o-primary-button o-primary-button--bigger">Регистрация</button>
        </form>
    </div>
</section>


